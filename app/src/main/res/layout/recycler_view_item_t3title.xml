<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingBottom="18dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="4dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_t3title_iv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="18dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="4dp"
        android:scaleType="fitXY"
        android:src="@mipmap/main_bg_t3_title"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/item_t3title_lin_01"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/love_background"
        app:layout_constraintTop_toBottomOf="@+id/banner" />

    <LinearLayout
        android:id="@+id/item_t3title_ll_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/item_t3title_lin_01">

        <TextView
            android:id="@+id/item_t3title_tv_icon_01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/main_icon_t3_01"
            android:gravity="center_horizontal"
            android:text="单身汪"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/item_t3title_tv_icon_02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/main_icon_t3_02"
            android:gravity="center_horizontal"
            android:text="追求吧"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/item_t3title_tv_icon_03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/main_icon_t3_03"
            android:gravity="center_horizontal"
            android:text="热恋中"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/item_t3title_tv_icon_04"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/main_icon_t3_04"
            android:gravity="center_horizontal"
            android:text="失恋后"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/item_t3title_tv_icon_05"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/main_icon_t3_05"
            android:gravity="center_horizontal"
            android:text="婚后期"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:paddingBottom="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/item_t3title_ll_category">

        <ImageView
            android:id="@+id/iv_practice_teach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/practice_teach_icon" />

        <ImageView
            android:id="@+id/iv_practice_love"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/practice_love_icon" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>