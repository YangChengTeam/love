<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/love_intro_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="中文"
                android:textColor="@color/black"
                android:textSize="@dimen/size_16" />

            <View
                android:layout_width="1dp"
                android:layout_height="8dp" />

            <TextView
                android:id="@+id/love_intro_tv_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="155"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/size_14" />

        </LinearLayout>


        <com.yc.verbaltalk.base.view.RoundCornerImg
            android:id="@+id/love_intro_iv_icon"
            android:layout_width="108dp"
            android:layout_height="70dp"
            android:layout_margin="12dp"
            android:scaleType="fitXY"
            android:src="@mipmap/main_bg_t3_placeholder"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/love_background"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>