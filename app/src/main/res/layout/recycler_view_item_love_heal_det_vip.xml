<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/shape_bg_white_gray_brim_det"
    android:paddingTop="12dp"
    android:paddingBottom="1dp">

    <LinearLayout
        android:id="@+id/item_love_heal_det_vip_ll_tit_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- <TextView
             android:id="@+id/item_love_heal_det_vip_tv_sex"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:padding="3dp"
             android:textColor="@color/black"
             android:textSize="@dimen/size_16"
             android:textStyle="bold" />-->

        <ImageView
            android:id="@+id/item_love_heal_det_vip_iv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:src="@mipmap/icon_dialogue_men" />

        <TextView
            android:id="@+id/item_love_heal_det_vip_tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="18dp"
            android:layout_weight="10"
            android:maxLines="3"
            android:text="中文"
            android:textColor="@color/black"
            android:textSize="@dimen/size_16"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_love_heal_det_vip_tv_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="*************\n********请点击查看********"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16"
        app:layout_constraintTop_toBottomOf="@+id/item_love_heal_det_vip_ll_tit_con" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingRight="8dp"
        android:paddingBottom="2dp"
        android:text="查看"
        android:textColor="@color/red_crimson"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_love_heal_det_vip_tv_des" />

</android.support.constraint.ConstraintLayout>