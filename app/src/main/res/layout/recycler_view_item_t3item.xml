<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="8dp">

    <ImageView
        android:id="@+id/item_t3item_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/main_bg_t3_01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_t3item_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/shape_btn_red_crimson_thin"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:text="5555"
        android:textColor="@color/white"
        android:textSize="@dimen/size_16"
        app:layout_constraintBottom_toBottomOf="@+id/item_t3item_iv"
        app:layout_constraintLeft_toLeftOf="@+id/item_t3item_iv" />

    <TextView
        android:id="@+id/item_t3item_tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="2dp"
        android:text="666"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/size_12"
        app:layout_constraintTop_toBottomOf="@+id/item_t3item_iv" />


</android.support.constraint.ConstraintLayout>